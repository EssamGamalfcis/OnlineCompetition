@using AdminPanel.Models
@model List<OnlineCompetition.Models.Questions>
@{ ViewData["Title"] = "Cometition Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/fontawesome.css" rel="stylesheet" />
<script src="~/js/sweetalert2.js"></script>

<h1 style="text-align: center; margin-top: 10px; margin-bottom: 30px;">أعدادت ألاسألة</h1>

<div id='addQuestionModal' class='modal fade' data-url='@Url.Action("AddOrEditQuestions")?id=0'>
    <div id='addQuestionContainer' class="container partialViewModal">
    </div>
</div>

<button id='addQuestion' class="btn btn-primary btn-outline-primary" style="float: right; margin: 10px;">أضافة سؤال</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>أسم السؤال</th>
            <th>الترتيب</th>
            <th>الدرجة</th>
            <th style="text-align:center">تعديل / حذف</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Question in Model)
        {
        <tr>
            <td>@Question.NameAR</td>
            <td>@Question.Sort</td>
            <td>@Question.TotalScore</td>
            <td style="text-align:center">
                <a class="btn btn-danger" style="cursor: pointer; color: white;" questionId="@Question.Id" onclick="Delete(this)">حذف</a>
                <a class="btn btn-primary editQuestions" style="cursor: pointer; color: white;" questionId="@Question.Id">تعديل</a>
            </td>
        </tr> 
         }
            </tbody>
        </table>
        <script>
            $(document).ready(function () {
                $('#addQuestion').click(function () {
                    var url = $('#addQuestionModal').data('url');
                    $.get(url, function (data) {
                        $('#addQuestionContainer').html(data);
                        $("#addQuestionModal").addClass("in");
                        $(".modal-backdrop").show()
                        $("#addQuestionModal").show();
                        $('#addQuestionModal').modal('show');
                    });
                });
                $('.editQuestions').click(function () {
                    var url = $('#addQuestionModal').data('url');
                    url = url.replace('0', $(this).attr('questionId'))
                    $.get(url, function (data) {
                        $('#addQuestionContainer').html(data);
                        $("#addQuestionModal").addClass("in");
                        $(".modal-backdrop").show()
                        $("#addQuestionModal").show();
                        $('#addQuestionModal').modal('show');
                    });
                });
            });
            function Cancel() {
                $("#addQuestionModal").removeClass("in");
                $(".modal-backdrop").hide()
                $("#addQuestionModal").hide();
            }
            function Delete(obj) {
                var objToSend = {};
                objToSend.Id = $(obj).attr('questionId');
                Swal.fire({
                    title: 'تأكيد',
                    text: "هل انت متأكد من الحذف",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("DeleteQuestion")",
                            data: { obj: objToSend },
                            dataType: "text",
                            success: function (response) {
                                if ($.parseJSON(response).success == true || $.parseJSON(response).success == "true") {
                                    Swal.fire(
                                        'حذف',
                                        'تم الحذف بنجاح',
                                        'success'
                                    ).then((result) => {
                                        Cancel();
                                        location.reload();
                                    })
                                }
                                else {
                                    Swal.fire(
                                        'تنبية',
                                        'برجاء المحاولة فى وقت أخر',
                                        'warning'
                                    );
                                    $('#Loader').hide();
                                    $('#SaveBtn').show();
                                    $('#CancelBtn').show();
                                }
                            },
                            error: function (req, status, error) {
                                Swal.fire(
                                    'تنبية',
                                    'خطأ بالسيرفر',
                                    'warning'
                                );
                                $('#Loader').hide();
                                $('#SaveBtn').show();
                                $('#CancelBtn').show();
                            }
                        });
                    }
                })
            }
        </script>