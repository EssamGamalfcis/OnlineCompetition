@using AdminPanel.Models
@model List<AnsewrsVM>
@{ ViewData["Title"] = "Cometition Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/fontawesome.css" rel="stylesheet" />
<script src="~/js/sweetalert2.js"></script>

<h1 style="text-align: center; margin-top: 10px; margin-bottom: 30px;">أعدادت الاجابات</h1>

<div id='addAnswerModal' class='modal fade' data-url='@Url.Action("AddOrEditAnswer")?id=0'>
    <div id='addAnswerContainer' class="container partialViewModal">
    </div>
</div>

<button id='addAnswer' class="btn btn-primary btn-outline-primary" style="float: right; margin: 10px;">أضافة أجابة</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>أسم الاجابة</th>
            <th>نوع الاجابة</th>
            <th>الاجابات</th>
            <th style="text-align:center">تعديل / حذف</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Answer in Model)
        {
            string answers = string.Join("&#13;", Answer.AnswersMaster);
             <tr>
                  <td>@Answer.AnswersMaster.NameAR</td>
                  <td>@Answer.AnswersMaster.AnswerType.ToString()</td>
                  <td title="answers">Hover Here</td>
                  <td style="text-align:center">
                     <a class="btn btn-danger" style="cursor: pointer; color: white;" answerMasterId="@Answer.AnswersMaster.Id" onclick="Delete(this)">Delete</a>
                     <a class="btn btn-primary" style="cursor: pointer; color: white;" answerMasterId="@Answer.AnswersMaster.Id" id="editAnswer">Update</a>
                  </td>
             </tr>
        }
            </tbody>
        </table>
        <script>
            $(document).ready(function () {
                $('#addAnswer').click(function () {
                    var url = $('#addAnswerModal').data('url');
                    $.get(url, function (data) {
                        $('#addAnswerContainer').html(data);
                        $("#addAnswerModal").addClass("in");
                        $(".modal-backdrop").show()
                        $("#addAnswerModal").show();
                        $('#addAnswerModal').modal('show');
                    });
                });
                $('#editCompetition').click(function () {
                    var url = $('#addAnswerModal').data('url');
                    url = url.replace('0', $(this).attr('answerMasterId'))
                    $.get(url, function (data) {
                        $('#addAnswerContainer').html(data);
                        $("#addAnswerModal").addClass("in");
                        $(".modal-backdrop").show()
                        $("#addAnswerModal").show();
                        $('#addAnswerModal').modal('show');
                    });
                });
            });
            function Cancel() {
                $("#addAnswerModal").removeClass("in");
                $(".modal-backdrop").hide()
                $("#addAnswerModal").hide();
            }
            function Delete(obj) {
                var objToSend = {};
                objToSend.Id = $(obj).attr('answerMasterId');
                Swal.fire({
                    title: 'تأكيد',
                    text: "هل انت متأكد من الحذف",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("DeleteCompetition")",
                            data: { obj: objToSend },
                            dataType: "text",
                            success: function (response) {
                                if ($.parseJSON(response).success == true || $.parseJSON(response).success == "true") {
                                    Swal.fire(
                                        'حذف',
                                        'تم الحذف بنجاح',
                                        'success'
                                    ).then((result) => {
                                        Cancel();
                                        location.reload();
                                    })

                                }
                                else {
                                    Swal.fire(
                                        'تنبية',
                                        'برجاء المحاولة فى وقت أخر',
                                        'warning'
                                    );
                                    $('#Loader').hide();
                                    $('#SaveBtn').show();
                                    $('#CancelBtn').show();
                                }
                            },
                            error: function (req, status, error) {
                                Swal.fire(
                                    'تنبية',
                                    'خطأ بالسيرفر',
                                    'warning'
                                );
                                $('#Loader').hide();
                                $('#SaveBtn').show();
                                $('#CancelBtn').show();
                            }
                        });
                    }
                })
            }
        </script>